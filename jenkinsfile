node {
    def app

    stage('Clone repository') {
        checkout scm
    }

    stage('Build image') {
        app = docker.build("yourdockerhubuser/yourapp")
    }

    stage('Test image') {
        // Run container without mounting workspace
        bat 'docker run --rm yourdockerhubuser/yourapp echo "Tests passed"'
    }

    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}
