pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Sonalipsa1234/basic-calculator'
            }
        }

        stage('Build image') {
            steps {
                bat """
                docker build -t sonalipsa/calculator-app:latest -t sonalipsa/calculator-app:%BUILD_NUMBER% .
                """
            }
        }

        stage('Test image') {
            steps {
                bat """
                docker run --rm sonalipsa/calculator-app:latest sh -c "npm test || echo 'No tests found, skipping...'"
                """
            }
        }

        stage('Push image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    bat """
                    echo %DOCKER_PASSWORD% | docker login -u %DOCKER_USERNAME% --password-stdin
                    docker push %DOCKER_USERNAME%/calculator-app:latest
                    docker push %DOCKER_USERNAME%/calculator-app:%BUILD_NUMBER%
                    """
                }
            }
        }
    }
}
