node {
    def appName = "sonalipsa/calculator-app"

    stage('Clone repository') {
        checkout scm
    }

    stage('Build image') {
        app = docker.build(appName)
    }

    stage('Test image') {
        // Run tests directly with docker run to avoid inside() Windows path issue
        bat "docker run --rm %appName% cmd /c \"echo Tests passed\""
    }

    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}
